<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:contentPaddingLeft="-2dp"
    card_view:contentPaddingRight="-2dp"
    card_view:cardCornerRadius="2dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="15sp"
            android:textColor="@color/greyish_brown"/>
        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@id/tv_title"
            android:background="@color/sky_blue"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxHeight="128dp"
                android:scaleType="centerCrop"
                android:src="@drawable/drawable_companies_image_placeholder" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_owner"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="8dp"
            android:layout_below="@id/ll_image" />

        <TextView
            android:id="@+id/tv_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_owner"
            android:layout_alignBottom="@id/iv_owner"
            android:layout_below="@id/iv_owner"
            android:layout_toRightOf="@id/iv_owner"
            android:layout_toEndOf="@id/iv_owner"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:textColor="@color/warm_grey"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>